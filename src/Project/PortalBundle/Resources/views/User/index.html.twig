{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/framework/css/structure.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/framework/css/body.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/framework/css/exception.css') }}" />
{% endblock %}

{% block body %}
<h1> Users: </h1>
</br>
{% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="flash-notice">
        {{ flashMessage }}
    </div>
{% endfor %}

<table class="table">
<tr>
	<td><strong>User ID</strong></td>
	<td><strong>Username</strong></td>
</tr>
{% for user in users %}
<tr>
    <td>{{ user.userId }}</td> 
	<td> <a href="{{ path('project_portal_user', { 'user_id': user.userId }) }}"> {{ user.username }}</a></td>
</tr>
{% endfor %}
</table>
{% endblock %}
